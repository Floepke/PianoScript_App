{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run PianoScript (venv)",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"${workspaceFolder}/pianoscript.py"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run PianoScript (system python)",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/pianoscript.py"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": false
			},
			"problemMatcher": []
		}
	]
}